<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
	xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

    <f:entry title="Stream" help="/plugins/ClearCase-UCM-Plugin/scm/help-stream.html">
      <f:textbox name="stream" value="${scm.stream}"/>
    </f:entry>

    <f:entry title="Component" help="/plugins/ClearCase-UCM-Plugin/scm/help-component.html">
      <f:textbox name="component" value="${scm.component}"/>
    </f:entry>

    <j:set var="levels" value="${descriptor.getLevels()}"/>
      <f:entry  title="Promotion level" help="/plugins/ClearCase-UCM-Plugin/scm/help-pLevel.html">
      <select class="setting-input" name="levelToPoll">
       <j:forEach var="l" items="${levels}">
        <f:option selected="${scm.levelToPoll==l}" value="${l}">${l}</f:option>
          </j:forEach>
         </select>
       </f:entry>

    <f:entry title="Load modules" help="/plugins/ClearCase-UCM-Plugin/scm/help-loadModules.html">
        <select class="setting-input" name="loadModule">
            <j:set var="modules" value="${descriptor.getLoadModules()}"/>
            <j:forEach var="lm" items="${modules}">
                <f:option selected="${scm.loadModule==lm}" value="${lm}">${lm}</f:option>
            </j:forEach>
        </select>
    </f:entry>
    
	<f:entry title="Polling" help="/plugins/ClearCase-UCM-Plugin/scm/help-polling.html">
		<select class="setting-input" name="CCUCM.polling">
		    <f:option selected="${instance.polling == 'self'}" value="self">Poll self</f:option>
			<f:option selected="${instance.polling == 'childs'}" value="child">Poll child streams</f:option>
			<f:option selected="${instance.polling == 'siblings'}" value="sibling">Poll sibling streams</f:option>
		</select>
	</f:entry>

	<f:entry title="Newest" help="/plugins/ClearCase-UCM-Plugin/scm/help-newest.html">
	    <f:checkbox name="CCUCM.newest" checked="${scm.newest}" />
	</f:entry>
	
    <f:entry title="Unstable" help="/plugins/ClearCase-UCM-Plugin/scm/help-unstable.html">
        <select class="setting-input" name="CCUCM.treatUnstable">
            <f:option selected="${instance.treatUnstable == 'successful'}" value="successful">Unstable jobs are treated as successful</f:option>
            <f:option selected="${instance.treatUnstable == 'failed'}" value="failed">Unstable jobs are treated as failed</f:option>
        </select>
    </f:entry>
	
    <f:entry title="Create baseline" help="/plugins/ClearCase-UCM-Plugin/scm/help-createBaseline.html">
        <f:checkbox name="CCUCM.createBaseline" checked="${scm.createBaseline}" />
    </f:entry>
    
    <f:entry title="Name template" help="/plugins/ClearCase-UCM-Plugin/scm/help-template.html">
      <f:textbox name="CCUCM.nameTemplate" value="${scm.nameTemplate}" default="baseline_[date]_[time]" checkUrl="'${rootURL}/scm/CCUCMScm/templateCheck?value='+escape(this.value)"/>
    </f:entry>

    <f:entry title="Recommend baseline" help="/plugins/ClearCase-UCM-Plugin/scm/help-recommendBaseline.html">
        <f:checkbox name="CCUCM.recommend" checked="${scm.recommend}" />
    </f:entry>

    <f:entry title="Make tag" help="/plugins/ClearCase-UCM-Plugin/scm/help-makeTag.html">
        <f:checkbox name="CCUCM.makeTag" checked="${scm.makeTag}" />
    </f:entry>

    <f:entry title="Set description" help="/plugins/ClearCase-UCM-Plugin/scm/help-setDescription.html">
        <f:checkbox name="CCUCM.setDescription" checked="${scm.setDescription}" />
    </f:entry>
	
	<f:section title="Build Options">
	
		<f:advanced>
			
				<f:entry title="Multi-site promotion level cache" help="/plugins/ClearCase-UCM-Plugin/scm/help-multisite.html">
				    <f:checkbox name="CCUCM.multiSite" checked="${instance.multiSite}" />
				</f:entry>
	
		    <f:entry title="Build project" help="/plugins/ClearCase-UCM-Plugin/scm/help-buildProject.html">
	      		<f:textbox name="buildProject" value="${scm.buildProject}"/>
	    	</f:entry>
	
		</f:advanced>
		
	</f:section>
	
</j:jelly>