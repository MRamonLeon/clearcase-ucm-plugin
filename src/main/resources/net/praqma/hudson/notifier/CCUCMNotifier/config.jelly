	<f:entry title="Promote" help="/plugin/ClearCase-UCM-Plugin/notifier/help-promoteToLevel.html">
		<select class="setting-input" name="CCUCM.promoteAction">
			<f:option selected="${instance.promoteAction == 100}" value="100">Do not promote</f:option>
			<f:option selected="${instance.promoteAction == 101}" value="101">Promote stable builds</f:option>
			<f:option selected="${instance.promoteAction == 102}" value="102">Promote unstable builds</f:option>
		</select>
	</f:entry>




	<f:entry title="Recommend baseline" help="/plugin/ClearCase-UCM-Plugin/notifier/help-recommendBaseline.html">
	    <f:checkbox name="CCUCM.recommended" checked="${instance.recommended}" />
	</f:entry>

	<f:entry title="Make tag" help="/plugin/ClearCase-UCM-Plugin/notifier/help-makeTag.html">
	    <f:checkbox name="CCUCM.makeTag" checked="${instance.makeTag}" />
	</f:entry>

	<f:entry title="Set description" help="/plugin/ClearCase-UCM-Plugin/notifier/help-setDescription.html">
	    <f:checkbox name="CCUCM.setDescription" checked="${instance.setDescription}" />
	</f:entry>


